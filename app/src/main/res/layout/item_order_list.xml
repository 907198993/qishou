<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        app:cardCornerRadius="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp"
            android:gravity="center_vertical"
            >
            <TextView
                android:id="@+id/tv_order_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:gravity="right"
                android:textColor="@color/order_list_price"
                android:textStyle="bold"
                android:textSize="22sp"
                android:text="9.98" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"

                >
                <TextView
                    android:id="@+id/tv_shop_distance"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="1.2 km"
                    android:textSize="15sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/gray_33"
                    />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:orientation="vertical">
                    <com.github.customview.MyTextView
                        android:id="@+id/tv_shop_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法大大哥"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />
                    <com.github.customview.MyTextView
                        android:id="@+id/tv_shop_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法大大哥法大大哥法大大哥法大大哥法大大哥"
                        android:textColor="@color/order_list_shop_address"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>

            <com.github.customview.MyImageView
                android:layout_width="18dp"
                android:layout_height="14dp"
                android:src="@mipmap/distance_image"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/tv_customer_distance"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    tools:text="1.2 km"
                    android:textSize="15sp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:textColor="@color/gray_33"
                    />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:orientation="vertical">
                    <com.github.customview.MyTextView
                        android:id="@+id/tv_customer_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法大大哥"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        />
                    <com.github.customview.MyTextView
                        android:id="@+id/tv_customer_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="法大大哥法大大哥法大大哥法大大哥法大大哥"
                        android:textColor="@color/order_list_shop_address"
                        android:textSize="12sp"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    />
                <LinearLayout
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_weight="7"
                    android:orientation="vertical">
                    <com.github.customview.MyTextView
                        android:id="@+id/tv_customer_remark"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="备注："
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        />

                </LinearLayout>
            </LinearLayout>
            <com.github.customview.MyTextView
                android:id="@+id/tv_order_receive"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textColor="@color/white"
                app:my_tv_solid="@color/main_background"
                app:my_tv_press="@color/button_press"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                app:my_tv_corner_radius="50dp"
                android:textSize="15sp"
                android:layout_marginTop="5dp"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>